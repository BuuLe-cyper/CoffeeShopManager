@page
@model CoffeeShop.Pages.User.LoginModel
@{
}
<h2 class="text-center">Login</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <input class="form-control" asp-for="@Model.UserName"/>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input class="form-control" asp-for="@Model.Password" type="password"/>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Submit</button>
    <a class="btn btn-success" asp-page="./Register">Register</a>
</form>