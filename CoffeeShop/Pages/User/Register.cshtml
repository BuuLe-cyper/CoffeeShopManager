@page
@model CoffeeShop.Pages.User.RegisterModel
@{
}
<h2 class="text-center">Register</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <input asp-for="@Model.UserName" class="form-control"/>
        <span asp-validation-for="@Model.UserName" class="text-center text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" type="password"/>
        <span asp-validation-for="@Model.Password" class="text-center text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.EmailAddress"></label>
        <input asp-for="@Model.EmailAddress" class="form-control" type="email" />
        <span asp-validation-for="@Model.EmailAddress" class="text-center text-danger"></span>
    </div>
    <button class="btn btn-primary">Register</button>
    <a class="btn btn-success" asp-page="./Login">Login</a>
</form>