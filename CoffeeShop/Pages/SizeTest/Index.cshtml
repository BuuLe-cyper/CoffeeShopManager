@page
@model CoffeeShop.Pages.SizeTest.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Size Id")
            </th>
            <th>
                @Html.DisplayName("Is Deleted")
            </th>
            <th>
                @Html.DisplayName("Is Active")
            </th>
            <th>
                @Html.DisplayName("Create Date")
            </th>
            <th>
                @Html.DisplayName("Modify Date")
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model.Size) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SizeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SizeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SizeID">Soft Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
