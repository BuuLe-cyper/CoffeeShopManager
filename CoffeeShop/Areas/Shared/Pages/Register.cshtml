@page
@model CoffeeShop.Areas.Shared.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="register-area">
    <h2 class="text-center">Register</h2>
    @if(!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-center text-danger">@Model.ErrorMessage</p>
    }
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.UserName"></label>
            <input asp-for="@Model.UserName" class="form-control" />
            <span asp-validation-for="@Model.UserName" class="text-center text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" class="form-control"/>
            <span asp-validation-for="@Model.Password" class="text-center text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword"></label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-center text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EmailAddress"></label>
            <input asp-for="@Model.EmailAddress" class="form-control" />
            <span asp-validation-for="@Model.EmailAddress" class="text-center text-danger"></span>
        </div>
        <div class="m-2 p-2">
            <button class="btn btn-primary">Register</button>
            <a class="btn btn-success" asp-page="./Login">Login</a>
        </div>
    </form>
    <a class="btn btn-success" asp-page="./ConfirmEmail">ConfirmEmailTest</a>
</div>